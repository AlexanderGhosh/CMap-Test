@page
@using CMapTest.Models
@model CMapTest.Pages.ProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<p>Projects: <button class="btn" data-bs-toggle="modal" data-bs-target="#add-project-model">Add</button></p>
@{
    if (Model.Projects.Any())
    {
        <table class="table">
            <tr>
                <th> @Html.DisplayNameFor(model => Model.Projects.First().Name)</th>
                <th> @Html.DisplayNameFor(model => Model.Projects.First().Description)</th>
                <th> @Html.DisplayNameFor(model => Model.Projects.First().Enabled)</th>
            </tr>
            @foreach (Project proj in Model.Projects)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => proj.Name)</td>
                    <td>@Html.DisplayFor(_ => proj.Description)</td>
                    <td>@Html.DisplayFor(_ => proj.Enabled)</td>
                    <td>
                        <a asp-page="/Project" asp-route-projectId="@proj.Id">View</a>
                    </td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="projId" id="projId" value="@proj.Id"/>
                            <button type="submit" asp-page-handler="RemoveProject">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Projects found please create a Project</p>
    }
}
<div class="modal" tabindex="-1" id="add-project-model">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Project Details</h5>
            </div>
            <div class="modal-body">
                <form method="post" >
                    <div>
                        <lable for="projName">@nameof(Project.Name)</lable>
                        <input type="text" id="projName" name="@nameof(Project.Name)" />
                    </div>
                    <div>
                        <lable for="projDesc">@nameof(Project.Description)</lable>
                        <input type="text" id="projDesc" name="@nameof(Project.Description)" />
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" asp-page-handler="AddProject">Add</button>
                        <button class="btn btn-secondary" type="reset" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
